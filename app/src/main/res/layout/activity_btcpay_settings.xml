<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:elevation="1dp"
        android:background="@color/color_bg_white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_back"
            android:contentDescription="@string/common_back"
            app:tint="@color/color_text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/btcpay_settings_title"
            android:textSize="20sp"
            android:textColor="@color/color_text_primary"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center" />

        <!-- Spacer to balance layout -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/color_bg_surface"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp">

            <!-- ==================== -->
            <!-- ENABLE TOGGLE CARD  -->
            <!-- ==================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/enable_toggle_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Icon -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="#E3F2FD">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_link"
                            app:tint="@color/color_accent_blue" />
                    </FrameLayout>

                    <!-- Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/btcpay_enable_title"
                            android:textColor="@color/color_text_primary"
                            android:textSize="17sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/btcpay_enable_subtitle"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/btcpay_enable_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ==================== -->
            <!-- CONNECTION SECTION   -->
            <!-- ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif"
                android:text="@string/btcpay_section_connection"
                android:textAllCaps="true"
                android:textColor="@color/color_text_secondary"
                android:textSize="13sp"
                android:letterSpacing="0.03" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_bg_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Server URL -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/btcpay_server_url_label"
                        android:textColor="@color/color_text_primary"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/btcpay_server_url_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_pill"
                        android:fontFamily="sans-serif"
                        android:hint="@string/btcpay_server_url_hint"
                        android:inputType="textUri"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/color_text_primary"
                        android:textColorHint="@color/color_text_tertiary"
                        android:textSize="16sp" />

                    <!-- API Key -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/btcpay_api_key_label"
                        android:textColor="@color/color_text_primary"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/btcpay_api_key_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_pill"
                        android:fontFamily="sans-serif"
                        android:hint="@string/btcpay_api_key_hint"
                        android:inputType="textPassword"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/color_text_primary"
                        android:textColorHint="@color/color_text_tertiary"
                        android:textSize="16sp" />

                    <!-- Store ID -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/btcpay_store_id_label"
                        android:textColor="@color/color_text_primary"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/btcpay_store_id_input"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_input_pill"
                        android:fontFamily="sans-serif"
                        android:hint="@string/btcpay_store_id_hint"
                        android:inputType="text"
                        android:paddingHorizontal="20dp"
                        android:textColor="@color/color_text_primary"
                        android:textColorHint="@color/color_text_tertiary"
                        android:textSize="16sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- ==================== -->
            <!-- TEST CONNECTION      -->
            <!-- ==================== -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif"
                android:text="@string/btcpay_section_test"
                android:textAllCaps="true"
                android:textColor="@color/color_text_secondary"
                android:textSize="13sp"
                android:letterSpacing="0.03" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_bg_card"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:id="@+id/test_connection_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <!-- Icon -->
                    <FrameLayout
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/bg_circle"
                        android:backgroundTint="#FFF3E0">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_link"
                            app:tint="@color/color_bitcoin_orange" />
                    </FrameLayout>

                    <!-- Text -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="@string/btcpay_test_connection_title"
                            android:textColor="@color/color_text_primary"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/test_connection_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/btcpay_test_connection_subtitle"
                            android:textColor="@color/color_text_secondary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Chevron -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_chevron_forward"
                        app:tint="@color/color_text_tertiary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
