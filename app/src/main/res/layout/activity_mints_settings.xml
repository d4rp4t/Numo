<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg_white">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:elevation="0dp"
        android:background="@color/color_bg_white"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_chevron_back"
            android:contentDescription="@string/common_back"
            app:tint="@color/color_text_primary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mints_explore_title"
            android:textSize="20sp"
            android:textColor="@color/color_text_primary"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="center" />

        <ImageButton
            android:id="@+id/reset_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:contentDescription="@string/mints_reset_description"
            app:tint="@color/color_text_tertiary" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/color_bg_surface"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- ==================== -->
            <!-- LIGHTNING MINT SECTION -->
            <!-- ==================== -->
            <LinearLayout
                android:id="@+id/lightning_mint_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="16dp"
                android:visibility="gone">

                <!-- Section Header -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/mints_lightning_mint"
                    android:textAllCaps="true"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="13sp"
                    android:letterSpacing="0.03" />

                <!-- Lightning Mint Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/lightning_mint_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/color_bg_white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Top Row: Icon + Name/URL -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Icon Container (circular avatar) -->
                            <FrameLayout
                                android:id="@+id/lightning_icon_container"
                                android:layout_width="52dp"
                                android:layout_height="52dp"
                                android:layout_marginEnd="16dp">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:id="@+id/lightning_mint_icon"
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:layout_gravity="center"
                                    android:scaleType="centerCrop"
                                    android:background="@color/color_bg_tertiary"
                                    android:src="@drawable/ic_bitcoin"
                                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Circle"
                                    app:strokeColor="@color/color_bg_white"
                                    app:strokeWidth="2dp"
                                    android:contentDescription="@string/cd_mint_icon" />

                            </FrameLayout>

                            <!-- Text Content -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/lightning_mint_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="sans-serif-medium"
                                    android:text="Lightning Mint"
                                    android:textColor="@color/color_text_primary"
                                    android:textSize="17sp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />

                                <TextView
                                    android:id="@+id/lightning_mint_url"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="mint.example.com"
                                    android:textColor="@color/color_text_tertiary"
                                    android:textSize="13sp"
                                    android:maxLines="1"
                                    android:ellipsize="end" />

                            </LinearLayout>

                            <!-- Lightning Badge -->
                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@drawable/ic_lightning_bolt"
                                app:tint="@color/color_bitcoin_orange"
                                android:contentDescription="@null" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="14dp"
                            android:background="@color/color_divider" />

                        <!-- Balance Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mints_balance"
                                android:textSize="15sp"
                                android:textColor="@color/color_text_secondary" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/lightning_mint_balance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₿0"
                                android:textSize="17sp"
                                android:textColor="@color/color_text_primary"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:text="@string/mints_lightning_description"
                            android:textSize="13sp"
                            android:textColor="@color/color_text_tertiary"
                            android:lineSpacingMultiplier="1.3" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- ==================== -->
            <!-- ALL MINTS SECTION -->
            <!-- ==================== -->
            <TextView
                android:id="@+id/all_mints_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif"
                android:text="@string/mints_all_mints"
                android:textAllCaps="true"
                android:textColor="@color/color_text_secondary"
                android:textSize="13sp"
                android:letterSpacing="0.03" />

            <!-- Mints Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/mints_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                app:cardBackgroundColor="@color/color_bg_white"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Total Balance Header -->
                    <LinearLayout
                        android:id="@+id/total_balance_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="16dp"
                        android:paddingBottom="14dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mints_total_balance"
                            android:textSize="14sp"
                            android:textColor="@color/color_text_secondary"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/total_balance_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₿0"
                            android:textSize="17sp"
                            android:textColor="@color/color_text_primary"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <!-- Divider below total balance -->
                    <View
                        android:id="@+id/total_balance_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="20dp"
                        android:background="@color/color_divider"
                        android:visibility="gone" />

                    <!-- Mint List Container -->
                    <LinearLayout
                        android:id="@+id/mints_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingVertical="48dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:alpha="0.3"
                    android:src="@drawable/ic_bitcoin"
                    app:tint="@color/color_text_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/mints_empty_title"
                    android:textColor="@color/color_text_secondary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/mints_empty_subtitle"
                    android:textColor="@color/color_text_tertiary"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- ==================== -->
            <!-- ADD MINT SECTION -->
            <!-- ==================== -->
            <TextView
                android:id="@+id/add_mint_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif"
                android:text="@string/mints_add_section"
                android:textAllCaps="true"
                android:textColor="@color/color_text_secondary"
                android:textSize="13sp"
                android:letterSpacing="0.03" />

            <com.electricdreams.numo.ui.components.AddMintInputCard
                android:id="@+id/add_mint_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
